<!-- ========== KIDS GAME SCREEN ========== -->
<div id="kidsScreen" class="screen">
    <button class="backBtn backToMap">← Back to Map</button>

    <div id="kidsTitle">Animal Challenge Game</div>
    <p style="max-width:480px;margin:0 auto 10px;">
        Tap the best answer to learn what challenges animals face in the wild.
        Simple, no glitches – just click and learn.
    </p>

    <div id="challengeCard">
        <div id="animalName"></div>
        <div id="questionText"></div>
        <button class="answerBtn" data-index="0"></button>
        <button class="answerBtn" data-index="1"></button>
        <button class="answerBtn" data-index="2"></button>

        <div id="feedback"></div>
        <button id="nextChallengeBtn">Next Animal</button>
    </div>
</div>


<script>
    // ---------- SCREEN NAVIGATION ----------
    const mapScreen    = document.getElementById('mapScreen');
    const missionsScreen = document.getElementById('missionsScreen');
    const kidsScreen   = document.getElementById('kidsScreen');

    function showScreen(screen) {
        [mapScreen, missionsScreen, kidsScreen].forEach(s => s.classList.remove('active'));
        screen.classList.add('active');
    }

    document.getElementById('missionsBtn').onclick = () => showScreen(missionsScreen);
    document.getElementById('kidsBtn').onclick     = () => showScreen(kidsScreen);

    document.querySelectorAll('.backToMap').forEach(btn => {
        btn.onclick = () => showScreen(mapScreen);
    });

    // ---------- TOILET PANEL TOGGLE ----------
    const toiletPanel = document.getElementById('toiletPanel');
    document.getElementById('toiletToggleBtn').onclick = () => {
        toiletPanel.classList.toggle('visible');
    };

    // ---------- KIDS GAME LOGIC ----------
    const challenges = [
        {
            animal: "Kangaroo",
            question: "What is a real challenge kangaroos face?",
            options: [
                "Finding enough food and water during droughts",
                "Learning how to fly",
                "Remembering their Wi-Fi password"
            ],
            correct: 0,
            explanation: "When there is less grass and water, kangaroos have to travel further and can get weaker."
        },
        {
            animal: "Penguin",
            question: "What problem can penguins have?",
            options: [
                "Too many ice creams",
                "Water pollution and warming seas",
                "Forgetting their homework"
            ],
            correct: 1,
            explanation: "Pollution and warmer oceans can affect the fish they eat and the ice they live on."
        },
        {
            animal: "Elephant",
            question: "What challenge might elephants face?",
            options: [
                "Not enough hats",
                "Habitat loss and needing lots of space",
                "Too many birthday parties"
            ],
            correct: 1,
            explanation: "Elephants need huge areas to walk and find food. When habitat is cleared, life gets harder."
        }
    ];

    let currentIndex = 0;

    const animalNameEl = document.getElementById('animalName');
    const questionTextEl = document.getElementById('questionText');
    const answerButtons = document.querySelectorAll('.answerBtn');
    const feedbackEl = document.getElementById('feedback');

    function loadChallenge(index) {
        const ch = challenges[index];
        animalNameEl.textContent = ch.animal;
        questionTextEl.textContent = ch.question;
        answerButtons.forEach((btn, i) => {
            btn.textContent = ch.options[i];
            btn.style.background = '#eee';
        });
        feedbackEl.textContent = "";
    }

    answerButtons.forEach(btn => {
        btn.onclick = () => {
            const choice = parseInt(btn.getAttribute('data-index'), 10);
            const ch = challenges[currentIndex];

            if (choice === ch.correct) {
                feedbackEl.textContent = "✅ Correct! " + ch.explanation;
                btn.style.background = '#c8e6c9';
            } else {
                feedbackEl.textContent = "❌ Not quite. Try another answer.";
                btn.style.background = '#ffcdd2';
            }
        };
    });

    document.getElementById('nextChallengeBtn').onclick = () => {
        currentIndex = (currentIndex + 1) % challenges.length;
        loadChallenge(currentIndex);
    };

    // Initialize first challenge
    loadChallenge(currentIndex);
</script>

</body>
</html>